  <script>
    // Toggle romaji & furigana
    const chkRomaji = document.getElementById('toggleRomaji');
    const chkFuri = document.getElementById('toggleFurigana');
    const romajis = () => document.querySelectorAll('.romaji');
    const furiganas = () => document.querySelectorAll('.furigana');
    const kanas = () => document.querySelectorAll('.kana');

    const applyToggles = () => {
      romajis().forEach(el => el.style.display = chkRomaji.checked ? '' : 'none');
      furiganas().forEach(el => el.style.display = chkFuri.checked ? '' : 'none');
      kanas().forEach(el => el.style.display = chkFuri.checked ? 'none' : '');
    };
    chkRomaji.addEventListener('change', applyToggles);
    chkFuri.addEventListener('change', applyToggles);
    applyToggles();

    // Toggle terjemahan bunpou
    document.getElementById('toggleTrans').addEventListener('click', () => {
      document.querySelectorAll('.trans').forEach(p => p.classList.toggle('hidden'));
    });

    // Toggle terjemahan dokkai
    document.getElementById('toggleDokkai').addEventListener('click', () => {
      document.querySelector('.dtr').classList.toggle('hidden');
    });
  </script>
